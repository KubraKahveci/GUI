<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dritte_sicht"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kbra.gui.dritteSicht">

    <TextView
        android:text="Hier die passenden Rezepte."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Such dir was aus !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="56dp"
        android:id="@+id/textView12"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="zurück"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView12"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="38dp"
        android:id="@+id/zurück" />

    <Button
        android:text="weiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/zurück"
        android:layout_toEndOf="@+id/zurück"
        android:layout_marginStart="38dp"
        android:id="@+id/weiter"
        android:onClick="weiter" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:color/white"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="45dp"
        android:id="@+id/imageView2"
        android:layout_alignStart="@+id/textView12" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/editbox_dropdown_light_frame"
        android:id="@+id/imageView3"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="13dp"
        android:layout_alignStart="@+id/zurück" />

</RelativeLayout>
